
- var galleryBasePath = 'images/gallery/'

mixin sidebarGalleryItem(name, title, date, alt)
	article.holder_news
		h4 #{title}
			span #{date}
		article.holder_gallery
			a.photo_hover2(href='gallery.html#' + name)
				img(src=(galleryBasePath + name + '-small.jpg'), width='265', height='199', alt=(alt ? alt : title))

mixin galleryItem(name, title, date, alt)
	img(id=name, src=(galleryBasePath + name + '-big.jpg'), width='900', height='675', alt=(alt ? alt : title))
	h4
		span #{date} #{title}

