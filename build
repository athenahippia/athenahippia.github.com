#!/usr/bin/env node

var fs = require('fs'),
	jade = require('jade');


render([
	//Templates for rendering
	'index', 'contacts', 'schedule', 'about'
]);


function render(templates) {
	templates.map(function(name) {
		var path = 'templates/pages/' + name + '.jade',
			template = fs.readFileSync(path),
			html = jade.compile(template, {filename: path, pretty: true})();
		fs.writeFileSync(name + '.html', html);
	});
}
